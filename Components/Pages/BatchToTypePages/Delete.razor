@page "/batchtotypes/delete"
@using Microsoft.EntityFrameworkCore
@using GoodsWebApp.Models
@inject IDbContextFactory<GoodsWebApp.Data.GoodsWebAppContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>BatchToType</h2>
    <hr />
    @if (batchtotype is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">GoodsTypeID</dt>
            <dd class="col-sm-10">@batchtotype.GoodsTypeID</dd>
        </dl>
        <EditForm method="post" Model="batchtotype" OnValidSubmit="DeleteBatchToType" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(batchtotype is null)">Delete</button> |
            <a href="/batchtotypes">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private BatchToType? batchtotype;

    [SupplyParameterFromQuery]
    private int GoodsBatchID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        batchtotype = await context.BatchToType.FirstOrDefaultAsync(m => m.GoodsBatchID == GoodsBatchID);

        if (batchtotype is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteBatchToType()
    {
        using var context = DbFactory.CreateDbContext();
        context.BatchToType.Remove(batchtotype!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/batchtotypes");
    }
}
